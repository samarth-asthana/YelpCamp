<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align: center;">Write your comment <span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span></h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" disabled value="<%= currentUser.username %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Write your comment..." autofocus="autofocus" rows="5" cols="70"></textarea>
                </div>
                <div class="form-group">
                     <button class="btn btn-success btn-md">Comment <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>