<% include partials/header %>
        <div class="container">
            <div class="my-container">
                <form action="/register" method="POST">
                    <fieldset>
                        <legend>Register</legend>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <label for="username">Username *</label>
                            </div>
                            <div class="form-group col-sm-12 col-md-9">
                                <input class="form-control" type="text" id="username" name="username" placeholder="Select a username" autofocus="autofocus" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <label for="password">Create a password *</label>
                            </div>
                            <div class="form-group col-sm-12 col-md-9">
                                <input class="form-control" type="password" id="password" name="password" placeholder="********" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <label for="fname">First Name *</label>
                            </div>
                            <div class="form-group col-sm-12 col-md-9">
                                <input class="form-control" type="text" id="fname" name="firstName" placeholder="First Name" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <label for="lname">Last Name *</label>
                            </div>
                            <div class="form-group col-sm-12 col-md-9">
                                <input class="form-control" type="text" id="lname" name="lastName" placeholder="Last Name" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <label for="email">Email *</label>
                            </div>
                            <div class="form-group col-sm-12 col-md-9">
                                <input class="form-control" type="email" id="email" name="email" placeholder="example@gmail.com" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <label for="avatar">Choose your avatar</label>
                            </div>
                            <div class="form-group col-sm-12 col-md-9">
                                <input class="form-control" type="text" id="avatar" name="avatar" placeholder="avatar url (Optional)">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <label for="adminCode">Admin Code</label>
                            </div>
                            <div class="form-group col-sm-12 col-md-9">
                                <input class="form-control" type="password" id="adminCode" name="adminCode" placeholder="This is for admins">
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Signup</button>
                        </div>
                        * indicates compulsory fields
                    </fieldset>
                </form>
                <a href="/campgrounds">Cancel</a>
            </div>
        </div>
<% include partials/footer %>