<% include ./partials/header %>
        <div class="container">
            <div id="my-reset" class="my-container">
                <form action="/reset/<%= token %>" method="POST">
                    <legend>Reset Password</legend>
                    <div class="row">
                        <div class="col-sm-12 col-md-3">
                            <label for="password">New Password</label>
                        </div>
                        <div class="form-group col-sm-12 col-md-9">
                            <input type="password" name="password" value="" placeholder="Create a password" autofocus="autofocus" class="form-control" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-3">
                            <label for="confirm">Confirm Password</label>
                        </div>
                        <div class="form-group col-sm-12 col-md-9">
                            <input type="password" name="confirm" value="" placeholder="Retype your password" autofocus="autofocus" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Update">
                    </div>
                </form>
            </div>
        </div>
<% include ./partials/footer %>